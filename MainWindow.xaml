<Window x:Class="MacValvesWordGenerate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacValvesWordGenerate"
        mc:Ignorable="d"
        Title="Génération Word" Height="450" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=ViewModel}">
    <StackPanel>
        <TextBox Background="Transparent"
         BorderThickness="0"
        Text="What's your name?"
         IsReadOnly="True"
         TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
        <TextBox x:Name="nameInput" Width="300" HorizontalAlignment="Left" Text="{Binding Path=NameInput, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <Button Content="Générer"  Command ="{Binding PressGenerateButton}"/>
    </StackPanel>
</Window>
