<Window x:Class="MacValvesWordGenerate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacValvesWordGenerate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=ViewModel}">
    <StackPanel>
            <TextBlock Text="What's your name?"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,20">

                <TextBox x:Name="nameInput"
                         Width="300" HorizontalAlignment="Left" Text="{Binding Path=NameInput}"/>

            <Button Content="Valider"  Command ="{Binding PressNameButton}"/>
            </StackPanel>
            <TextBlock Text="{Binding PeopleName}"/>
        <Button Content="Générer"  Command ="{Binding PressGenerateButton}"/>
    </StackPanel>
</Window>
